// Helper function for currency symbols
function get_pricing_currency_symbol($currency = 'USD') {
    $symbols = array(
        'USD' => '$',
        'EUR' => '€',
        'GBP' => '£',
        'CAD' => 'C$',
        'AUD' => 'A$'
    );
    return isset($symbols[$currency]) ? $symbols[$currency] : '$';
}
